# ============================
# Configuração Geral do n8n
# ============================

N8N_HOST=n8n.seudominio.com.br
N8N_PORT=5678
N8N_PROTOCOL=https
NODE_ENV=production
WEBHOOK_URL=https://n8n.seudominio.com.br/
GENERIC_TIMEZONE=America/Sao_Paulo

# ============================
# Banco de Dados - PostgreSQL
# ============================

DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=SUA_SENHA_SEGURA

POSTGRES_USER=n8n
POSTGRES_PASSWORD=SUA_SENHA_SEGURA
POSTGRES_DB=n8n

# ============================
# Traefik
# ============================

TRAEFIK_SSL_HOST=embaixadorton.com.br

# ============================
# Rede Docker
# ============================

NETWORK_NAME=n8n

# ============================
# Limites e Reservas de Recursos
# ============================

LIMIT_CPU=1.5
LIMIT_MEMORY=1500M
RESERVATION_CPU=0.5
RESERVATION_MEMORY=512M
