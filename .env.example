# ============================
# Configuração Geral do n8n
# ============================

N8N_HOST=n8n.seudominio.com.br             # Subdomínio onde o n8n será acessado
N8N_PORT=5678                              # Porta interna do serviço
N8N_PROTOCOL=https                         # Protocolo utilizado (https/http)
NODE_ENV=production                        # Ambiente de produção
WEBHOOK_URL=https://n8n.seudominio.com.br/ # URL completa para webhooks
GENERIC_TIMEZONE=America/Sao_Paulo         # Fuso horário (importante para agendamentos)

# ============================
# Banco de Dados - PostgreSQL
# ============================

DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres                # Nome do serviço do container
DB_POSTGRESDB_DATABASE=n8n                 # Nome do banco de dados
DB_POSTGRESDB_USER=n8n                     # Nome do usuário do banco
DB_POSTGRESDB_PASSWORD=SUA_SENHA_AQUI      # Senha do banco

POSTGRES_USER=n8n                          # Usuário para container postgres
POSTGRES_PASSWORD=SUA_SENHA_AQUI           # Senha para container postgres
POSTGRES_DB=n8n                            # Nome do banco no container postgres
