# n8n Configuration
N8N_HOST=n8n.your-domain.com
N8N_PORT=5678
N8N_PROTOCOL=https
NODE_ENV=production
WEBHOOK_URL=https://n8n.your-domain.com/
GENERIC_TIMEZONE=America/Sao_Paulo
TZ=America/Sao_Paulo

# Encryption Key (generate a random base64 string, e.g., `openssl rand -base64 32`)
N8N_ENCRYPTION_KEY=your_encryption_key_here

N8N_SKIP_AUTH_ON_OAUTH_CALLBACK=false
N8N_RESTRICT_FILE_ACCESS_TO=/files

# Database (PostgreSQL)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n_user
DB_POSTGRESDB_PASSWORD=n8n_db_password_here

# PostgreSQL Container (same as above)
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=n8n_db_password_here
POSTGRES_DB=n8n

# Traefik SSL
TRAEFIK_SSL_HOST=your-domain.com

# Docker Network
NETWORK_NAME=n8n

# Resource Limits (optional)
LIMIT_CPU=1.5
LIMIT_MEMORY=1500M
RESERVATION_CPU=0.5
RESERVATION_MEMORY=512M

# File storage
N8N_DEFAULT_BINARY_DATA_MODE=filesystem

# Basic Auth (optional)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=basic_auth_password_here
